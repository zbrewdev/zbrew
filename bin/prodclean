#!/bin/sh
#set -x

out=$(whence zbrewfuncs >/dev/null)
if [ $? -eq 0 ]; then
	. zbrewfuncs
else
	echo "zbrew tools need to be in your PATH"
	exit 4
fi

InvalidOption=1
TooFewParms=2
UnknownAction=3
PrefixTooLong=4

#
# Temporary hack - replace with a proper message file
#
msg() {
        pgm=$1
        msgnum=$2
        msgtype=$3

        shift 3
        args=$*

        case ${msgnum} in
                ${InvalidOption}) msgtext="Invalid option specified: -";;
                ${TooFewParms}) msgtext="Too few Parameters specified. Expected 2 but received: ";;
                ${UnknownAction}) msgtext="Unknown action specified: ";;
                ${PrefixTooLong}) msgtext="Prefix must be 6 characters or less. Received: ";;
                *) msgtext="Internal Error. Unknow msgnum: ${msgnum}";;
        esac
        echo "ZCL000"${msgnum}${msgtype} "${msgtext}${args}" >&2
}


while getopts ":vd" opt; do
  case ${opt} in
    d )
      debug=1
      ;;
    v )
      verbose=1
      opts="-v"
      ;;
    \?)
      if [ ${OPTARG} != "?" ]; then
        msg smpconfig ${InvalidOption} E "${OPTARG}"
      fi
      syntax
      exit 4
      ;;
  esac
done
shift $(expr $OPTIND - 1 )
if [ $# -lt 1 ]; then
        msg smpconfig ${TooFewParms} E "$#"
        syntax
        exit 16
fi

mydir=$(callerdir ${0})

sw=$1
ussname=$(echo ${sw} | tr '[:upper:]' '[:lower:]');
zosname=$(echo ${sw} | tr '[:lower:]' '[:upper:]');
prefix=`echo "${ussname}" | awk '{ print substr($1, 0, 3) }'`

props="${mydir}/../../zbrew/properties/zbrewprops.json"
zbrewpropse zbrew config "${props}"

props=$(callerdir "$0")"/../../zbrew/properties/globalprops.json"
zbrewpropse zbrew global ${props}

smpelibs="${mydir}/../../zbrew-${prefix}/${ussname}/${ussname}bom.json"
ussname=$(echo ${ussname} | tr '[:lower:]' '[:upper:]')

swparent=`readparent ${ussname} <${smpelibs}`
rc=$?
if [ $rc -gt 0 ]; then
	echo "$swparent"
	exit $rc
fi

swchild=`readchild ${ussname} <${smpelibs}`
rc=$?
if [ $rc -gt 0 ]; then
        echo "$swchild"
        exit $rc
fi

if [ "$swparent" != "0" ]; then
	echo " " >&2
	echo "*************************************************************************** " >&2
	echo " " >&2
	echo "Warning: Product $zosname is installed into the SMP/E zone for $swparent" >&2 
	echo "Only $zosname specific cleanup will be performed" >&2 
	echo "If you need to re-install $zosname, then you MUST Either take manual action " >&2 
	echo "to clean up SMP/E or alternatively uninstall and reinstall $swparent" >&2 
	echo "*************************************************************************** " >&2
fi

if [ "$swchild" != "0" ]; then
	echo " " >&2
	echo "************************************************************************************************************* " >&2
        echo "Warning: Product $zosname is a parent to $swchild. $swchild is installed in the same SMP/E zone as $zosname" >&2
        echo "By running uninstall or using the -c option for $zosname, means the SMP/E environment for $swchild is affected." >&2
        echo "Zbrew will automatically uninstall $swchild as a result." >&2
        echo "If desired you will need to reinstall $swchild after re-installing $zosname." >&2
	echo "************************************************************************************************************* " >&2
	echo " "
	if [ "${verbose}" = "1" ]; then
		echo "Proceeding to uninstall $swchild" >&2
	fi
	uninst=`zbrew uninstall ${swchild}`
	rc=$?
	if [ "${rc}" != 0 ]; then
		echo "Uninstall of ${swchild} failed." >&2
		echo "${uninst}" >&2
		exit 16
	fi
fi

libs=`readbom ${ussname} <${smpelibs}`
rc=$?
if [ $rc -gt 0 ]; then
        echo "${libs}"
        exit $rc
fi
mountpoints=`echo "${libs}" | awk '($2 == "ZFS") {print $7}'`

if [ "$verbose" = "1" ]; then
	echo "Attempting to unmount ${ZBREW_ZFSROOT}${mountpoints}" >&2
fi
unm=`echo "${libs}" | awk -v zbr="$ZBREW_ZFSROOT" '($2 == "ZFS") {system("/usr/sbin/unmount -R "zbr""$7" 2>/dev/null")}'`

out=`drm -f "${ZBREW_HLQ}${zosname}*.**"`
rc=$?
if [ $rc -gt 0 ]; then
        echo "Dataset cleanup failed. UnInstall aborted"
        exit $rc
fi

exit 0
